#create and activate conda env
conda create -y --name ngs python=3.6
source activate ngs

#Download Data-Set
mkdir -p ~/workstation/fqData && cd ~/workstation/fqData
nano Data_set.txt    #this file contatin all links of samples
wget -i Data_set.txt

#Download human genome (GRCh38.p13)
mkdir ~/workstation/data_sample && cd ~/workstation/data_sample
wget ftp://ftp.ncbi.nlm.nih.gov/refseq/H_sapiens/annotation/GRCh38_latest/refseq_identifiers/GRCh38_latest_genomic.fna.gz
gunzip GRCh38_latest_genomic.fna.gz

#Install the software

#Install FASTQC 
conda install -c bioconda fastqc

#install magic blast
conda install -c bioconda -y magicblast

#Run the FASTQC for each read
mkdir -p ~/workstation/FASTQC_report && cd ~/workstation/FASTQC_report            
for f in ~/workdir/fqData/*.fq.gz;do fastqc -t 1 -f fastq -noextract $f;done

#create blast data base "indixing of the ref step"
makeblastdb -in GRCh38_latest_genomic.fna -out GRCh38 -parse_seqids -dbtype nucl 
